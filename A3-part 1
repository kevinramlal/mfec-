double x0 = a;
    double x1 = b;
    if (f0 > 0) {
        x0 = b;
        x1 = a;
    }
    
    double f2 = 1;
    double x2 = 0;
    
    while (!isZero(f2)) {
        x2 = 0.5*(x0 + x1);
        f2 = f(x2);
        if (f2 < 0) {
            x0 = x2;
        } else {
            x1 = x2;
        }
    }
    return x2;
}
